{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "python",
      "dockerBuild": {
        "tag": "vscodebookr2python:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "env": {
          "FLASK_APP": "server/api.py"
        },
        "ports": [
          {
            "containerPort": 8000,
            "hostPort": 8000
          }
        ]
      },
      "python": {
        "args": [
          "run",
          "--no-debugger",
          "--no-reload",
          "--host",
          "0.0.0.0",
          "--port",
          "8000"
        ],
        "module": "flask"
      }
    }
  ]
}
